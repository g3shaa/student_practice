@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<table class="table table-bordered table-striped">
    <tr>
        <th>Продукт</th>
        <th>Цена</th>
        <th>Брой</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit", "Product", new {@id = Model.Rows[i][0]})">Редактирай</a>
                <a href="@Url.Action("Delete", "Product", new {@id = Model.Rows[i][0]})">Изтрий</a>

            </td>
        </tr>
    }
</table>
